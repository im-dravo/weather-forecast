{
	"openapi": "3.0.1",
	"info": {
		"title": "OpenAPI definition",
		"version": "v0"
	},
	"servers": [
		{
			"url": "http://localhost:8081",
			"description": "Generated server url"
		}
	],
	"paths": {
		"/weather/get-warmest-day": {
			"get": {
				"tags": [
					"weather-controller"
				],
				"summary": "Get the warmest day in upcoming 5 days, in the UK reagion only",
				"operationId": "getWeather",
				"parameters": [
					{
						"name": "getWarmestDayRequest",
						"in": "query",
						"required": true,
						"schema": {
							"$ref": "#/components/schemas/GetWarmestDayQuery"
						}
					}
				],
				"responses": {
					"400": {
						"description": "Invalid coordinates supplied"
					},
					"200": {
						"description": "The waremest day is here! Yay!!",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/GetWarmestDayResponse"
								}
							}
						}
					}
				}
			}
		},
		"/weather-request-history/user/{userId}": {
			"get": {
				"tags": [
					"weather-request-history-controller"
				],
				"summary": "Get a history of their client's calls. By default ordered by requested date. \n The ordering can be explicity requested based on requested date or weather result count",
				"operationId": "getHistoryByUserId",
				"parameters": [
					{
						"name": "userId",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string",
							"format": "uuid"
						}
					},
					{
						"name": "getHistoryQuery",
						"in": "query",
						"required": true,
						"schema": {
							"$ref": "#/components/schemas/GetWeatherRequestHistoryQuery"
						}
					}
				],
				"responses": {
					"200": {
						"description": "History of the user's call to API",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/GetWeatherRequestHistoryResponse"
								}
							}
						}
					},
					"404": {
						"description": "No history found"
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"GetWarmestDayQuery": {
				"required": [
					"latitude",
					"longitude",
					"userId"
				],
				"type": "object",
				"properties": {
					"latitude": {
						"type": "number"
					},
					"longitude": {
						"type": "number"
					},
					"userId": {
						"type": "string",
						"format": "uuid"
					}
				}
			},
			"GetWarmestDayResponse": {
				"type": "object",
				"properties": {
					"warmestDay": {
						"type": "string"
					}
				}
			},
			"GetWeatherRequestHistoryQuery": {
				"type": "object",
				"properties": {
					"orderBy": {
						"type": "string",
						"enum": [
							"WEATHER_HISTORY_REQUESTED_DATE",
							"WEATHER_RESULT_COUNT"
						]
					},
					"orderField": {
						"type": "string",
						"writeOnly": true,
						"enum": [
							"WEATHER_HISTORY_REQUESTED_DATE",
							"WEATHER_RESULT_COUNT"
						]
					}
				}
			},
			"GetWeatherRequestHistoryResponse": {
				"type": "object",
				"properties": {
					"history": {
						"type": "array",
						"items": {
							"$ref": "#/components/schemas/WeatherRequestHistory"
						}
					}
				}
			},
			"WeatherRequestHistory": {
				"type": "object",
				"properties": {
					"resultCount": {
						"type": "integer",
						"format": "int32"
					},
					"latitude": {
						"type": "number"
					},
					"longitude": {
						"type": "number"
					},
					"warmestDayIdentified": {
						"type": "string"
					},
					"requestedOn": {
						"type": "string",
						"format": "date-time"
					}
				}
			}
		}
	}
}